# Database Configuration
MONGODB_URI=mongodb://localhost:27017/passwordless-auth

# Server Configuration
PORT=4000
NODE_ENV=development
APP_URL=http://localhost:5173
API_URL=http://localhost:4000

# JWT Configuration (REQUIRED - Generate secure random strings)
JWT_ACCESS_SECRET=your-super-secret-access-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d

# Cookie Configuration
COOKIE_DOMAIN=localhost
COOKIE_PATH=/
COOKIE_SAME_SITE=lax

# Magic Link Configuration
TOKEN_EXPIRY_MINUTES=15
LOGIN_EMAIL_SUBJECT=Your Passwordless Login Link

# Email Configuration (Gmail SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_FROM=your-email@gmail.com
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=5
RATE_LIMIT_STANDARD_HEADERS=draft-6
RATE_LIMIT_LEGACY_HEADERS=false
RATE_LIMIT_MESSAGE=Too many requests, please try again later.

# Email Template Customization (Optional)
APP_NAME=Passwordless Auth
COMPANY_NAME=Your Company
EMAIL_PRIMARY_COLOR=#667eea
EMAIL_FONT_FAMILY=Arial, sans-serif
EMAIL_MAX_WIDTH=600px
EMAIL_CONTAINER_PADDING=20px
EMAIL_BUTTON_PADDING=12px 24px
EMAIL_BUTTON_RADIUS=6px
EMAIL_BUTTON_FONT_SIZE=16px
EMAIL_TEXT_COLOR=#333333
EMAIL_HEADING_COLOR=#222222
EMAIL_LIGHT_BG_COLOR=#f8f9fa
EMAIL_WARNING_BG_COLOR=#fff3cd
EMAIL_WARNING_TEXT_COLOR=#856404
EMAIL_BORDER_COLOR=#dee2e6
EMAIL_SECTION_MARGIN=20px 0
EMAIL_BORDER_RADIUS=8px
EMAIL_WARNING_PADDING=12px
EMAIL_WARNING_FONT_SIZE=14px
EMAIL_LINE_HEIGHT=1.5

# Note: For Gmail, you need to:
# 1. Enable 2-factor authentication
# 2. Generate an "App Password" (not your regular password)
# 3. Use the App Password as EMAIL_PASS
